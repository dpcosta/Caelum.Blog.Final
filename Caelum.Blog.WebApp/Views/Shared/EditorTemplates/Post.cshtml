@model Caelum.Blog.Negocio.Post

<div class="form-group">
    <label>Título:</label>
    <input asp-for="Titulo" class="form-control" />
    <span asp-validation-for="Titulo"></span>
</div>

<div class="form-group">
    <label>Resumo:</label>
    <textarea asp-for="Resumo" class="form-control" rows="4"></textarea>
    <span asp-validation-for="Resumo"></span>
</div>

<div class="form-group">
    <label>Categoria:</label>
    <input asp-for="Categoria" class="form-control" />
</div>
